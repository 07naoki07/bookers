<% if flash[:notice] %>
     <div class="flash">
       <%= flash[:notice] %>
     </div>
<% end %>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <p>
  <strong>Title</strong>
  </p>
  <%= f.text_field :title %>
  <p>
  <strong>Body</strong>
  </p>
  <%= f.text_area :body %>
  <p>
  <%= f.submit 'Update Book' %>
  </p>
  <%= link_to "Show", book_path(@book.id) %>
   | 
  <%= link_to "Back", books_path %>
<% end %>